<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cr.dao.CompanyMapperResultMap">

    <resultMap id="ResultMapCollection" type="Company">
        <id column="company_id" property="companyId"/>
        <result column="company_name" property="companyName"/>
        <collection property="users" ofType="User">
            <id column="user_id" property="userId"/>
            <result column="name" property="name"/>
            <result column="nick_name" property="nickName"/>
        </collection>
    </resultMap>
    
    <select id="selectResultMapCollection" resultMap="ResultMapCollection">
        select c.company_id, company_name, user_id, name, nick_name
        from company as c inner join user u on c.company_id = u.company_id
        where c.company_id = #{companyId}
    </select>

    <resultMap id="ResultMapCollectionWithStep" type="Company">
        <id column="company_id" property="companyId"/>
        <result column="company_name" property="companyName"/>
        <collection property="users" select="com.cr.dao.UserMapper.selectUserByCompanyId" column="company_id"/>
    </resultMap>

    <select id="selectResultMapCollectionWithStep" resultMap="ResultMapCollectionWithStep">
        select * from company where company_id = #{companyId}
    </select>

</mapper>