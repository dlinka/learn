<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--
        Class2 init...
        Class1 init...
    <bean id="class2" class="com.cr.init.demo1.Class2"></bean>
    <bean id="class1" class="com.cr.init.demo1.Class1"></bean>
    -->

    <!--
        Class2 init...
        Class1 init...
        set Class1...
    <bean id="class2" class="com.cr.init.demo2.Class2">
        <property name="class1" ref="class1"></property>
    </bean>
    <bean id="class1" class="com.cr.init.demo2.Class1"></bean>
    -->

    <!--
        Class2 init...
        Class1 init...
        set Class1...
        Class3 init...
    <bean id="class2" class="com.cr.init.demo3.Class2">
        <property name="class1" ref="class1"></property>
    </bean>
    <bean id="class1" class="com.cr.init.demo3.Class1"></bean>
    <bean id="class3" class="com.cr.init.demo3.Class3"></bean>
    -->

    <!--
        Class2 init...
        Class1 init...
        set Class1...
        afterPropertiesSet...
        initMethod...
        Class3 init...
    <bean id="class2" class="com.cr.leftcycle.demo4.Class2" init-method="initMethod">
        <property name="class1" ref="class1"></property>
    </bean>
    <bean id="class1" class="com.cr.leftcycle.demo4.Class1"></bean>
    <bean id="class3" class="com.cr.leftcycle.demo4.Class3"></bean>
    -->

</beans>